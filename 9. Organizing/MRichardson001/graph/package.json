{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "GraphQL server for AMLI",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development && tsc-watch --onSuccess \"node dist/server.js\"",
    "build": "tsc -p tsconfig.json",
    "build-ts": "tsc -p tsconfig.json",
    "heroku-postbuild": "yarn build",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "test": "set NODE_ENV=test yarn build && jest --detectOpenHandles",
    "test-unit": "jest --detectOpenHandles"
  },
  "engines": {
    "node": ">=8"
  },
  "author": "fsales",
  "dependencies": {
    "@sentry/node": "^5.1.2",
    "apollo-server": "^2.2.5",
    "apollo-server-express": "^2.2.5",
    "applicationinsights": "^1.4.2",
    "await-to-js": "^2.1.1",
    "axios": "0.19.2",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "cross-env": "5.2.1",
    "dataloader": "^1.4.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.0.2",
    "graphql-relay": "^0.5.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "node-cache": "^4.2.0",
    "prismic-javascript": "^1.5.0",
    "reviewpush-node": "^1.0.1",
    "rxjs": "^6.3.3",
    "serve-favicon": "^2.5.0",
    "sqreen": "^1.28.1",
    "typescript": "^3.2.1",
    "uuid": "^3.3.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.24",
    "@types/cheerio": "^0.22.13",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.0",
    "@types/ejs": "^2.6.0",
    "@types/express": "^4.16.0",
    "@types/express-graphql": "^0.6.2",
    "@types/graphql": "^14.0.3",
    "@types/graphql-relay": "^0.4.9",
    "@types/jest": "^23.3.12",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.118",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.10",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "^2.4.7",
    "apollo-link-ws": "^1.0.10",
    "cross-env": "5.2.1",
    "jest": "^23.6.0",
    "subscriptions-transport-ws": "0.9.14",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsc-watch": "^1.0.31",
    "tslint": "^5.11.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/src"
    ],
    "transform": {
      ".*\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.(test|spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
